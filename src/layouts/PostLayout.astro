---
import Layout from "./Layout.astro";

import type { MDXLayoutProps } from 'astro';

type Props = MDXLayoutProps<{
  // Define frontmatter props here
  title: string;
  author: string;
  date: string;
}>;

// Now, `frontmatter`, `url`, and other MDX layout properties
// are accessible with type safety
const { frontmatter, url } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
        <meta name="description" content="Generated by create-t3-app" />
		<style is:global>
			@import "../styles/globals.css";
		</style>
	</head>
	<body>
        <main class="bg-gray-100">
            <div class="h-screen w-full p-4">
                <div class="h-full w-full border-black border overflow-y-scroll hide-scrollbar scroll-smooth p-4 flex flex-col items-center">
                    <article class="prose font-mono font-bold lg:prose-xl">
                        <div class="not-prose">
                            <h1 class="font-mono font-bold text-5xl">{frontmatter.title}</h1>
                            <span>{frontmatter.author} {frontmatter.date}</span>
                        </div>
                        <slot />
                    </article>
                </div>
            </div>
        </main>
	</body>
</html>